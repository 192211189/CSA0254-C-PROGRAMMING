#include <stdio.h>
int main()
{
    int num,sum=0,digit;
    printf("Enter a number: ");
    scanf("%d", &num);
    while (num!= 0)
    {
        digit=num%10;
        sum=sum+digit;
        num=num/10;
    }
    printf("The sum of the digits is: %d\n", sum);
    return 0;
}


out put:

Enter a number: 6
The sum of the digits is: 6
